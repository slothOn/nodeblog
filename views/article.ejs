<%- include header %>
<% if (user && user.name == post.name) { %>
<p>
    <span><a class="edit" href="/<%= post.name %>/<%= post.time.day %>/<%= post.title %>/edit">编辑</a></span>
    <span><a class="remove" href="/<%= post.name %>/<%= post.time.day %>/<%= post.title %>/remove">删除</a></span>
</p>
<% } %>
<p class="info">
    作者: <a href="/u/<%= post.name %>"><%= post.name %></a>|
    日期: <%= post.time.minute %>
</p>
<p><%- post.post %></p>
<%- include comment %>
<%- include footer %>